/**app.wxss**/
@import '/common/style/mobileBase.wxss';
view {
  font-family: Helvetica, sans-serif;
  line-height: 1.2;
}

.text-row-1 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.text-row-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.text-row-3 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
/* text-row前提下居中 */ 
.text-row-center{
  -webkit-box-align: center;
}
